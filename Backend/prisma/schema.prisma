// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum CartStatus {
  ACTIVE
  COMPLETED
  CANCELED
}

enum Role {
  USER
  ADMIN
  OWNER
}

model User {
  id         Int            @id @default(autoincrement())
  username   String         @unique
 email      String         @unique
  password   String
  role       Role           @default(USER)
  createdAt  DateTime       @default(now())
  events     Event[]        @relation("creatorEvents")
  carts      Cart[]
  galleryImages GalleryImage[]
  newsArticles NewsArticle[] @relation("authorArticles")
}

model Event {
  id        Int    @id @default(autoincrement())
  title     String
  description String?
  location    String?
  startsAt    DateTime
  endsAt      DateTime?
  isPublic    Boolean @default(true)
  createdById Int
  createdBy   User    @relation("creatorEvents",  fields:[createdById], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

}

model Concert {
  id           Int      @id @default(autoincrement())
  title        String
  date         DateTime
  location     String
  description  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt  
  reminderSent Boolean  @default(false)
}

model Merchandise {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  price       Float
  stock       Int
  imageUrl    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  isActive    Boolean       @default(true)
  cartItems   CartItem[]
}

model Cart {
  id        Int        @id @default(autoincrement())
  userId    Int
  user      User       @relation(fields: [userId], references: [id])
  status    CartStatus @default(ACTIVE)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  items     CartItem[]
}

model CartItem {
  id            Int         @id @default(autoincrement())
  cartId        Int
  cart          Cart        @relation(fields: [cartId], references: [id])
  merchandiseId Int
  merchandise   Merchandise @relation(fields: [merchandiseId], references: [id])
  quantity      Int         @default(1)
  unitPrice     Float       // snapshot do preço no momento da compra
  createdAt     DateTime    @default(now())
}

model GalleryImage {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  filename    String   @unique
  mimetype    String
  size        Int      // em bytes
  category    String?  // Ex: "2023", "2024", "Concertos", "Estúdio", etc.
  year        Int?     // Ano específico para facilitar filtros
  uploadedById Int
  uploadedBy  User     @relation(fields: [uploadedById], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model NewsArticle {
  id          Int      @id @default(autoincrement())
  title       String
  summary     String   // resumo curto para listagens
  content     String   @db.Text // conteúdo completo
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  authorId    Int
  author      User     @relation("authorArticles", fields: [authorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
